<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    app:cardCornerRadius="0dp">


    <TextView
        android:id="@+id/textview_weather"
        android:layout_width="420dp"
        android:layout_height="47dp"
        android:layout_marginBottom="92dp"
        android:background="?colorPrimary"
        android:padding="8dp"
        android:text="Weather Status"
        android:textAlignment="center"
        android:textColor="@color/light_gray"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textview_highTemp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview_time"
        android:layout_width="423dp"
        android:layout_height="49dp"

        android:background="?colorPrimary"
        android:padding="8dp"
        android:text="Time"
        android:textAlignment="center"
        android:textColor="@color/light_gray"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textview_weather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.616" />

    <TextView
        android:id="@+id/textview_highTemp"
        android:layout_width="425dp"
        android:layout_height="51dp"
        android:layout_marginBottom="92dp"
        android:background="?colorPrimary"
        android:padding="8dp"
        android:text="High Temp"
        android:textAlignment="center"
        android:textColor="@color/light_gray"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textview_lowTemp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview_lowTemp"
        android:layout_width="427dp"
        android:layout_height="52dp"
        android:layout_marginBottom="84dp"
        android:background="?colorPrimary"
        android:padding="8dp"
        android:text="Low Temp"
        android:textAlignment="center"
        android:textColor="@color/light_gray"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>