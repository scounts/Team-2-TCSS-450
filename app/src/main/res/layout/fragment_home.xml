<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_root"
        android:layout_width="391dp"
        android:layout_height="238dp"
        android:layout_below="@id/layout_root"
        android:layout_marginTop="40dp"
        android:background="?android:colorBackgroundFloating"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_chatListt"
        app:layout_constraintVertical_bias="0.255" />

    <TextView
        android:id="@+id/textView_chatListt"
        android:layout_width="256dp"
        android:layout_height="32dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="-10dp"
        android:background="?colorPrimary"
        android:text="Chat List"
        android:textAlignment="center"
        android:textColor="@color/light_gray"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_weatherLabel" />

    <TextView
        android:id="@+id/textView_weatherLabel"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-10dp"
        android:background="?colorPrimary"
        android:text="Weather"
        android:textAlignment="center"
        android:textColor="@color/light_gray"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="373dp"
        android:layout_height="153dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/thermochat"
        app:layout_constraintBottom_toTopOf="@id/textView_weatherLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>